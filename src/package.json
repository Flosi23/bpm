{
  "name": "my-react-router-app",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "react-router build",
    "dev": "NODE_OPTIONS='--inspect=0.0.0.0:7000' react-router dev",
    "start": "react-router-serve ./build/server/index.js",
    "lint": "biome check --error-on-warnings .",
    "lint:fix": "biome check --write .",
    "lint:fix-unsafe": "biome check --write --unsafe .",
    "fmt": "biome format --write . && biome lint --only=lint/nursery/useSortedClasses --write .",
    "ci": "biome ci . && npm run typecheck",
    "typecheck": "react-router typegen && tsc --noEmit",
    "test:ci": "vitest run",
    "test:ui": "vitest --ui"
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.2.0",
    "@react-router/node": "^7.5.0",
    "@react-router/serve": "^7.5.0",
    "@spotify/web-api-ts-sdk": "^1.2.0",
    "arktype": "^2.1.19",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "isbot": "^5.1.17",
    "lucide-react": "^0.487.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.55.0",
    "react-router": "^7.5.0",
    "remix-auth": "^4.2.0",
    "remix-auth-oauth2": "^3.4.0",
    "remix-hook-form": "^7.0.1",
    "tailwind-merge": "^3.2.0",
    "tw-animate-css": "^1.2.5"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.0.0-beta.1",
    "@react-router/dev": "^7.5.0",
    "@tailwindcss/postcss": "^4.1.3",
    "@tailwindcss/typography": "^0.5.16",
    "@tailwindcss/vite": "^4.1.3",
    "@types/node": "^20",
    "@types/react": "^19.0.1",
    "@types/react-dom": "^19.0.1",
    "@vitest/ui": "^3.1.1",
    "npm-run-all": "^4.1.5",
    "npm-watch": "^0.13.0",
    "postcss": "^8.5.3",
    "react-router-devtools": "^1.1.0",
    "tailwindcss": "^4.1.3",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.7.2",
    "vite": "^5.4.11",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.1.1"
  }
}
